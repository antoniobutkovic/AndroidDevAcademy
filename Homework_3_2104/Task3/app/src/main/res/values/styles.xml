<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewInfoStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">9sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextViewHeadersStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TextViewContentTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textview_portfolio_contenttext</item>
        <item name="android:layout_margin">@dimen/margin_portfolio_contenttext</item>
    </style>

</resources>
