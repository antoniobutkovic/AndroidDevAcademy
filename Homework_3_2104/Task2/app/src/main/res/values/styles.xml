<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalculatorEditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_margin">@dimen/margin_inputedittext</item>
    </style>

    <style name="CalculatorButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorCalculatorButtonText</item>
        <item name="android:background">@color/colorCalculatorButtonBackground</item>
    </style>

</resources>
